# MQTT Configuration
REACT_APP_MQTT_BROKER_URL=ws://localhost:9001
REACT_APP_MQTT_TOPIC_PREFIX=noise

# Map Configuration  
REACT_APP_DEFAULT_MAP_CENTER_LAT=20.5937
REACT_APP_DEFAULT_MAP_CENTER_LON=78.9629
REACT_APP_DEFAULT_MAP_ZOOM=5

# Application Features
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND_ALERTS=false
REACT_APP_AUTO_REFRESH_INTERVAL=5000

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Optional: Custom Map Tiles
# REACT_APP_CUSTOM_TILE_URL=https://your-custom-tiles/{z}/{x}/{y}.png
# REACT_APP_CUSTOM_TILE_ATTRIBUTION=Your Attribution